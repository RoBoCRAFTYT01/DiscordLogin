<script>
    function sweetAlert(type, text, title = null) {
        if (title === null) {
            switch (type) {
                case "success":
                    title = "نجاح";
                    break;
                case "error":
                    title = "خطأ";
                    break;
                default:
                    title = "-";
            }
        }
        Swal({
            title: title,
            text: text,
            type: type,
            showCancelButton: true,
            showConfirmButton: false,
            allowOutsideClick: true,
            allowEscapeKey: true,
            allowEnterKey: true,
            cancelButtonColor: '#ef1010',
            cancelButtonText: 'إغلاق',
        })
    }

